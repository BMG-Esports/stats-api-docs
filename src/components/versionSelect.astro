<label
  class="mx-6 mb-2 w-3/4 bg-slate-500 dark:bg-slate-800 text-black dark:text-white rounded-lg relative inline-flex shrink appearance-none items-center gap-1.5 ps-3 pe-7 align-middle"
  for="version-select"
>
  <span class="label">Version</span>
  <select class="select" name="version-select" id="version-select">
    <option value="v1">1.0</option>
    <option value="v2" selected>2.0</option>
  </select>
</label>

<script>
  const dropdown = document.getElementById(
    "version-select"
  ) as HTMLSelectElement;
  dropdown?.addEventListener(
    "change",
    (event) => (window.location.href = `/requests/v${event.target ?? 2}/pr`)
  );
</script>
