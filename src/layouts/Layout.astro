---
import { ClientRouter } from "astro:transitions";
import Sidebar from "../components/Sidebar.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
---

<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="viewport" content="width=device-width" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Mono:wght@400;500;700&family=Overpass:ital,wght@0,300;0,400;0,600;0,800;1,400&display=swap"
      rel="stylesheet"
    />

    <title>Brawlhalla Esports Stats API Documentation</title>
    <ClientRouter />
  </head>
  <body
    class="m-0 bg-slate-400 dark:bg-slate-900 transition ease-in-out duration-500"
  >
    <Header />
    <div class="flex items-stretch overflow-x-hidden">
      <Sidebar />
      <main
        transition:animate="fade"
        class="m-0 p-6 flex flex-col justify-between min-h-screen w-full max-w-[1500px] bg-blue-200 dark:bg-blue-950 transition ease-in-out duration-500"
      >
        <article class="prose dark:prose-invert">
          <slot />
        </article>
        <Footer />
      </main>
    </div>
    <script>
      function colorMode() {
        if (
          localStorage.theme === "dark" ||
          (!("theme" in localStorage) &&
            window.matchMedia("(prefers-color-scheme: dark)").matches)
        ) {
          document.documentElement.classList.add("dark");
          document.documentElement.classList.remove("light");
        } else {
          document.documentElement.classList.remove("dark");
          document.documentElement.classList.add("light");
        }
      }

      colorMode();
      document.addEventListener("astro:after-swap", colorMode);
    </script>
  </body>
</html>
